@model BookleWebApp.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <h4>Order Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3" >
            Order Number
        </dt>
        <dd class="col-sm-9" id="OrderNumber">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-3">
            Customer Name
        </dt>
        <dd class="col-sm-9" id="CustomerName">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>
        <dt class="col-sm-3">
            Customer PhoneNumber
        </dt>
        <dd class="col-sm-9" id="CustomerPhoneNumber">
            @Html.DisplayFor(model => model.UserPhoneNumber)
        </dd>
        <dt class="col-sm-3">
            Customer Email
        </dt>
        <dd class="col-sm-9" id="CustomerEmail">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt class="col-sm-3">
            Order Date
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-3">
            Address
        </dt>
        <dd class="col-sm-9" id="Address">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-9" id="City">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-3">
            Total Amount
        </dt>
        <dd class="col-sm-9" id="TotalAmount">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>

<div>
    <h4>Order Items</h4>
    <hr />
    @if (Model.OrderItems == null || !Model.OrderItems.Any())
    {
        <p>No items found for this order.</p>
    }
    else
    {
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Publisher</th>
                    <th>Publisher Email</th>
                    <th>Publisher PhoneNumber</th>
                    <th>Book Title</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.Book.Publisher.Name</td>
                        <td>@item.Book.Publisher.Email</td>
                        <td>@item.Book.Publisher.PhoneNumber</td>
                        <td>@item.Book?.Title</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice</td>
                        <td>@(item.Quantity * item.UnitPrice)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Order</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
