@model BookleWebApp.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-danger text-center mb-4">Delete Book</h1>

    <div class="alert alert-warning text-center" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this book?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4>Book Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Title</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-4">Author</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Author)</dd>

                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-4">Stock Quantity</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.StockQuantity)</dd>

                <dt class="col-sm-4">Language</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BookLanguage)</dd>

                <dt class="col-sm-4">Image</dt>
                <dd class="col-sm-8">
                    <img src="@Html.DisplayFor(model => model.BookImage)" alt="Book Image" class="img-thumbnail" style="max-width: 150px;">
                </dd>

                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Id)</dd>

                <dt class="col-sm-4">Publisher</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Publisher.Id)</dd>

            </dl>
        </div>
    </div>

    <div class="text-center">
        <form asp-action="Delete" class="d-inline-block">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg me-2">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
